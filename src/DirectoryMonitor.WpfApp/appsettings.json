{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "System": "Information",
            "Microsoft": "Information"
        }
    },
    "NLog": {
        "throwConfigExceptions": true,
        "internalLogLevel": "Warn",
        "internalLogFile": "${basedir}/logs/internal-nlog.txt",
        "variables": {
            "logDir": "${basedir}/logs"
        },
        "targets": {
            "async": true,
            "debug": {
                "type": "Debugger",
                "layout": "${time} [${level:uppercase=true}]: ${message}"
            },
            "error": {
                "type": "Debugger",
                "layout": "${time} [${level:uppercase=true}]: ${message}"
            },
            "debugConsole": {
                "type": "Console",
                "layout": "${time} [${level:uppercase=true}]: ${message}"
            },
            "errorConsole": {
                "type": "Console",
                "layout": "${time} [${level:uppercase=true}]: ${message}"
            },
            "logFile": {
                "type": "File",
                "fileName": "${logDir}/${level}.log",
                "layout": "${time} [${level:uppercase=true}] ${message}",
                "archiveFileName": "${logDir}/${level}.{#}.log",
                "archiveNumbering": "DateAndSequence",
                "archiveEvery": "Day",
                "archiveDateFormat": "yyyyMMdd",
                "maxArchiveFiles": 30,
                "maxArchiveDays": 30
            }
        },
        "rules": [
            {
                "ruleName": "debug",
                "enabled": false,
                "logger": "*",
                "minLevel": "Debug",
                "writeTo": "debug,debugConsole"
            },
            {
                "ruleName": "error",
                "enabled": false,
                "logger": "*",
                "minLevel": "Error",
                "writeTo": "error,errorConsole"
            },
            {
                "ruleName": "logFile",
                "enabled": true,
                "logger": "*",
                "minLevel": "Info",
                "maxLevel": "Fatal",
                "writeTo": "logFile"
            }
        ]
    }
}